@model GetCargoCustomerByIdDto
@{
    ViewData["Title"] = "UserAddressInfo";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <h3 class="pt-3">Kullanıcı Adres ve İletişim Bilgisi</h3>
                    <div class="alert alert-info">Kullanıcı Id: @Model.cargoCustomerId</div>
                    <div class="alert alert-success">Ad Soyad: @Model.name @Model.surName</div>
                    <div class="alert alert-success">Email Adres: @Model.email</div>
                    <div class="alert alert-success">Telefon: @Model.phone</div>
                    <div class="alert alert-success">İlçe-Şehir: @Model.district @Model.city</div>
                    <div class="alert alert-success">Adres: @Model.address</div>
                </div>
            </div>
        </div>
    </div>
</section>
