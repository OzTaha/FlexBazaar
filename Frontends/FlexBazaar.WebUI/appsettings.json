// ocelot tarafından gelen dağıtımı UI tarafında kullanmak için gerekli ayarlar
{
  "ServiceApiSettings": {
    "OcelotUrl": "http://localhost:5000",
    "IdentityServerUrl": "http://localhost:5001",

    "Catalog": {
      "Path": "services/catalog/"
    },
    "Image": {
      "Path": "services/images"
    },
    "Discount": {
      "Path": "services/discount"
    },
    "Order": {
      "Path": "services/order"
    },
    "Cargo": {
      "Path": "services/cargo"
    },
    "Basket": {
      "Path": "services/basket/"
    },
    "Payment": {
      "Path": "services/payment"
    },
    "Comment": {
      "Path": "services/comment/"
    }
  },

  "ClientSettings": {

    "FlexBazaarVisitorClient": {
      "ClientId": "FlexBazaarVisitorId",
      "ClientSecret": "flexbazaarsecret"
    },

    "FlexBazaarManagerClient": {
      "ClientId": "FlexBazaarManagerId",
      "ClientSecret": "flexbazaarsecret"
    },

    "FlexBazaarAdminClient": {
      "ClientId": "FlexBazaarAdminId",
      "ClientSecret": "flexbazaarsecret"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
